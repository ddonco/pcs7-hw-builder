{
  "env": {
    "browser": true,
    "node": false
  },
  "extends": [
    /** @see https://eslint.vuejs.org/rules/ */
    "plugin:vue/vue3-strongly-recommended"
  ],
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "vue/html-self-closing": ["error", {
      "html": {
        "void": "any",
        "normal": "any",
        "component": "any"
      },
      "svg": "always",
      "math": "always",
      "comma-dangle": ["warn", "never"]
    }],
    "vue/v-on-style": 0,
    "@typescript-eslint/no-explicit-any": "off"
  },
  "parserOptions": {
    "parser": "@typescript-eslint/parser",
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}
